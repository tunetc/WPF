<Window x:Class="INDZ1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:INDZ1"
        mc:Ignorable="d"
        Title="Масштабування" Height="200" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Новий масштаб" Margin="0,0,0,10"/>
        <TextBox Name="txtScale" Width="100" Height="25" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="2" Margin="0,10,0,0">
            <Button Name="btnOK" Content="OK" Width="75" Margin="0,0,10,0" Click="btnOK_Click"/>
            <Button Name="btnApply" Content="Застосувати" Width="75" Click="btnApply_Click"/>
        </StackPanel>
    </Grid>
</Window>
